# Maintainer: Stefan Zimmermann <zimmermann.code@gmail.com>

pkgname=filesystem-cmd
pkgver=2015.09
pkgrel=1
pkgdesc='CMD shell integration'
arch=('i686' 'x86_64')
license=('APACHE')
url='http://sourceforge.net/projects/msys2/'
groups=('base')
source=(
    'msystem.bat'
    'msys.bash.bat'
    'msys.pacman.bat'
    'clink.msystem.lua'
    'clink.pacman.lua'
)
md5sums=(
    'C936E1BD34291B206763271E5BDFEBBF'
    '176EB30F2A20922A9393C201B5A40777'
    'EADE192DD77A40B6DE9FE19A5C455934'
    'FAAA3437DC2E14FED75863BE91E8AB6D'
    'D3AC4B091795EF5CE17E86A011CFF0AE'
)

build() {
    cd ${srcdir}
}

package() {
    cd ${pkgdir}

    install -d -m755 cmd cmd/msys cmd/clink

    install -m755 ${srcdir}/msystem.bat cmd/

    for file in ${srcdir}/msys.*.bat ; do
        install -m755 ${file} cmd/msys/${file#${srcdir}/msys.}
    done

    for file in ${srcdir}/clink.*.lua ; do
        install -m755 ${file} cmd/clink/${file#${srcdir}/clink.}
    done
}